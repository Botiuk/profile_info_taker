<div id="loader" class="center"></div>
<div id="search_form">
    <%= form_tag(search_path, :method => "get") do %>
        <div class="container text-center position-absolute top-50 start-50 translate-middle">
            <% if flash[:alert] %>
                <p class="text-center" style = "color: red; font-weight: bold; text-align: justify;"><%= alert %></p>
            <% end %>
            <div class="row justify-content-center">
                <div class="col-6">
                    <%= text_field_tag(:login, nil, autofocus: true, placeholder: t('.search_placeholder'), class: "text-center form-control border-primary") %>
                </div>
                <div class="col-auto">
                    <%= button_tag(t('button.search'), type: "submit", :name => nil, class: "btn btn-primary", id: "searchButton") %>
                </div>
            </div>
        </div>
    <% end %>
</div>

<script>
    document.querySelector("#search_form").style.visibility = "visible";
    document.querySelector("#loader").style.visibility = "hidden";

    document.querySelector("#searchButton").addEventListener('click', () => {
        document.querySelector("#search_form").style.visibility = "hidden";
        document.querySelector("#loader").style.visibility = "visible";
    });
</script>